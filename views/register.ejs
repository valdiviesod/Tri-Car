            <br>
            <br>
            <label for="start">Fecha de nacimiento</label>
            <br>
            <br>
            
            

<input type="date" id="start" name="bdate" class="btn-date"
       value="2022-04-29"
       min="1950-01-01" max="2022-12-31">
       <br>
            <label for="user">Correo electronico</label>
            <input type="text" name="email" required tabindex="7">

            <br>
            <label for="pass">Contraseña</label>
            <input type="password" name="pass" required tabindex="9">
            <div style="display: inline;">
                <input type="submit" class="btn-save" value="Regístrate">
            </div>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <% if(typeof alert != "undefined"){ %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage%>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton%> ,
                timer: <%= timer %>
            }).then(()=>{
                window.location= '/<%= ruta %>'
            })
        </script>
        <% } %>
</body>

</html>